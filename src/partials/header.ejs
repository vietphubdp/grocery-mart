<header class="header">
    <div class="container">
        <div class="top-bar">
            <!-- Menu Mobile Icon -->
            <button class="top-bar__more">
                <img
                    class="icon"
                    src="./icons/menu.svg"
                    alt=""
                    class="top-bar__more-icon"
                />
            </button>

            <!-- Logo -->
            <a href="#!" class="logo">
                <img
                    src="./icons/logo.svg"
                    alt="Grocery Mart"
                    class="logo__img"
                />
                <h1 class="logo__title">grocerymart</h1>
            </a>

            <!-- Navigation -->
            <nav class="navbar">
                <ul class="navbar__list">
                    <li>
                        <a href="#!" class="navbar__link">
                            Departments
                            <img
                                src="./icons/arrow-down.svg"
                                alt=""
                                class="icon navbar__arrow"
                            />
                        </a>
                    </li>
                    <li>
                        <a href="#!" class="navbar__link">
                            Grocery
                            <img
                                src="./icons/arrow-down.svg"
                                alt=""
                                class="icon navbar__arrow"
                            />
                        </a>
                    </li>
                    <li>
                        <a href="#!" class="navbar__link">
                            Beauty
                            <img
                                src="./icons/arrow-down.svg"
                                alt=""
                                class="icon navbar__arrow"
                            />
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Actions -->
            <div class="top-act">
                <div class="top-act__group top-act__group--single">
                    <button class="top-act__btn">
                        <img
                            src="./icons/search.svg"
                            alt=""
                            class="icon top-act__img"
                        />
                    </button>
                </div>

                <div class="top-act__group">
                    <button class="top-act__btn">
                        <img
                            src="./icons/heart.svg"
                            alt=""
                            class="icon top-act__img"
                        />
                        <span class="top-act__title">03</span>
                    </button>

                    <div class="top-act__sepharate"></div>

                    <button class="top-act__btn">
                        <img
                            src="./icons/cart.svg"
                            alt=""
                            class="icon top-act__img"
                        />
                        <span class="top-act__title">$65.42</span>
                    </button>
                </div>

                <div class="top-act__user">
                    <img
                        src="./img/avatar.jpg"
                        alt=""
                        class="top-act__avatar"
                    />
                </div>
            </div>
        </div>
    </div>
</header>
